<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<startup>
		<supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8" />
	</startup>

	<appSettings>
		<!-- Configuration du gestionnaire de mises à jour -->
		<add key="EnableLogging" value="true" />
		<add key="LogPath" value="UpdateLog.txt" />
		<add key="AutoSearchOnStartup" value="true" />
		<add key="SearchTimeoutMinutes" value="10" />
		<add key="DownloadTimeoutMinutes" value="30" />
		<add key="InstallTimeoutMinutes" value="60" />

		<!-- Types de mises à jour à inclure -->
		<add key="IncludeCriticalUpdates" value="true" />
		<add key="IncludeImportantUpdates" value="true" />
		<add key="IncludeOptionalUpdates" value="false" />
		<add key="IncludeDriverUpdates" value="false" />

		<!-- Interface utilisateur -->
		<add key="ShowDetailedProgress" value="true" />
		<add key="ConfirmInstallation" value="true" />
		<add key="ConfirmReboot" value="true" />
	</appSettings>

	<system.net>
		<settings>
			<!-- Configuration réseau pour Windows Update -->
			<httpWebRequest useUnsafeHeaderParsing="true" />
		</settings>
		<connectionManagement>
			<add address="*" maxconnection="10" />
		</connectionManagement>
	</system.net>

	<runtime>
		<assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
			<probing privatePath="lib" />
		</assemblyBinding>

		<!-- Configuration pour le ramasse-miettes -->
		<gcServer enabled="false" />
		<gcConcurrent enabled="true" />
	</runtime>
</configuration>